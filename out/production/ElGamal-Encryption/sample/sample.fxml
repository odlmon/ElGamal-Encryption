<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <ComboBox fx:id="cbMode" layoutX="245.0" layoutY="14.0" onAction="#modeChange" prefWidth="150.0" promptText="Режим работы" />
            <TextField fx:id="tInput" layoutX="55.0" layoutY="72.0" />
            <TextField fx:id="tOutput" layoutX="440.0" layoutY="72.0" />
            <Label layoutX="61.0" layoutY="55.0" text="Путь ко входному файлу:" />
            <Label layoutX="445.0" layoutY="55.0" text="Путь к выходному файлу:" />
            <TextField fx:id="tPrime" layoutX="246.0" layoutY="72.0" onAction="#primeChange" />
            <Label layoutX="272.0" layoutY="55.0" text="Простое число p:" />
            <Button fx:id="bCheckPrime" layoutX="282.0" layoutY="97.0" mnemonicParsing="false" onAction="#checkPrime" text="Проверить" />
            <Label fx:id="tRoots" layoutX="251.0" layoutY="137.0" text="Первообразные корни g:" />
            <ComboBox fx:id="cbRoots" layoutX="246.0" layoutY="154.0" onAction="#checkChange" prefWidth="150.0" />
            <Label fx:id="tX" layoutX="289.0" layoutY="196.0" text="Значение x:" />
            <TextField fx:id="tXValue" layoutX="246.0" layoutY="213.0" />
            <Label fx:id="tK" layoutX="289.0" layoutY="254.0" text="Значение k:" />
            <TextField fx:id="tKValue" layoutX="247.0" layoutY="271.0" />
            <Button fx:id="bAccept" disable="true" layoutX="282.0" layoutY="320.0" mnemonicParsing="false" onAction="#acceptAction" text="Выполнить" />
            <TextArea fx:id="taOutputSample" layoutX="415.0" layoutY="105.0" prefHeight="200.0" prefWidth="200.0" />
            <Label fx:id="lY" layoutX="97.0" layoutY="217.0" text="Значение y:" />
            <Label fx:id="amountRoots" layoutX="55.0" layoutY="158.0" text="Количество корней g:" />
         </children>
    </AnchorPane>
  </children>
</VBox>
